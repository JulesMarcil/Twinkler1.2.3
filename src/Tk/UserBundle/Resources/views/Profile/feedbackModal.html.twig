<div class="feedback-title" class="flat-header">We would love to hear from you!</div>
<button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="position: absolute; top: 0; right: 5px;">Ã—</button>
<form id="feedback-form" action="{{ path('tk_user_feedback') }}" method="post" {{ form_enctype(form) }}>

    {{ form_errors(form) }}

    <div style="display: inline-block; width: 60%">
        <textarea id="form_text" name="form[text]" required="required" placeholder="What is the problem?" style="width: 80%; height: 100px;"></textarea>
    </div>
    <div style="display: inline-block; width: 30%;">
        <div id="form_type" class="form-inline" align="left">
            <div>
            <input type="radio" id="form_type_0" name="form[type]" required="required" value="bug_site" checked/>
            <label for="form_type_0" class="required">Bug</label>
            </div>
            <div>
            <input type="radio" id="form_type_1" name="form[type]" required="required" value="suggestion_site" />
            <label for="form_type_1" class="required">Suggestion</label>
            </div>
            <div>
            <input type="radio" id="form_type_2" name="form[type]" required="required" value="question_site" />
            <label for="form_type_2" class="required">Question</label>
        </div>
        </div>
    </div>

    {{ form_widget(form._token) }}

    <div>
    <input type="submit" class="btn btn-success" value="Thank you"/>   
    </div>
</form>