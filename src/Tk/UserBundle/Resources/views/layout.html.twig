{% extends '::base.html.twig' %}

{% block head %}
    <link href="{{ asset('css/flat-ui.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('css/landing-page.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block body %}
<div id="user-layout-body">
    <header>
        <div>
            <a href="{{ path('tk_welcome_homepage') }}">
                <img src="{{ asset('img/logo/twinkler_logo.png') }}" width="200px" alt="twinkler logo">
            </a>
            <div class="pull-right" id="login-signup">
                {% block signuplogin %}
                {% endblock %}
            </div>
        </div>
    </header>

    <div class="container">
        {% block layoutcontent %}
        
        {% block fos_user_content %}
        {% endblock fos_user_content %}
                
        {% endblock %}
    </div>
</div>
{% endblock %}