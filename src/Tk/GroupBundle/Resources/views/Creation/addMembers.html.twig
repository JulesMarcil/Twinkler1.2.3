{% extends 'TkGroupBundle:Creation:creationProcess.html.twig' %}

{% block content %}
<div class="row">
	<div id="flash-message-block" class="span8 offset2" style="text-align: center">
	</div>
</div>
<div class="new-group row" style="text-align: center">
	<div class="span10 offset1 flat-container">
		<div class="flat-header">
			<h3>Add members to the group <b>{{ app.user.currentMember.tgroup.name }}</b></h3>
		</div>
		<div class="row" style="margin-top: 5px">
		<div class="span5" id="add-member-block">
			{% render(controller('TkGroupBundle:Default:addMember')) %}
			<div id="middle-border">
			</div>
		</div>
		<div class="span5" id="add-friend-block">
			{% render controller('TkUserBundle:Friends:inviteFriends') %}
		</div>
		</div>
		<div class="flat-footer"s style="padding-top: 20px; margin-top: 20px; padding-bottom: 0;">
			<a id="add-validate" href="{{ path('tk_group_add_validate') }}">
				<div class="flat-btn flat-pk" style="padding: 10px 20px">Validate and Continue</div>
			</a>
		</div>
	</div>
</div>
{% endblock %}
