{% extends 'TkUserBundle:Profile:show.html.twig' %}

{% block content %}
<div class="new-group row">
	<div class="col-md-6 col-md-offset-3" style="text-align: center">
			<div class="section-header">
			<div class="navbar navbar-inverse">
				<div class="navbar-header">
					<button type="button" class="btn btn-navbar" data-toggle="collapse" data-target="#nav-collapse-01"></button>
				</div>            
				<div class="navbar-collapse collapse" id="nav-collapse-01">
					<ul class="nav">
						<li>
							<h2>Choose a Name for your New Group</h2>
						</li>
					</ul>
				</div><!--/.nav -->
			</div>
		</div>
		<div class="flat-container" style="width: 100%">
			<form action="{{ path('tk_group_new') }}" method="post" {{ form_enctype(form) }} style="margin:0">
				<div class="new-group-content">
					    {{ form_errors(form) }}

					    {{ form_errors(form.name) }}
					    {{ form_widget(form.name, {
					    'attr' : { 'placeholder' : 'Ex: The Jets, Wicked Flat, ...'}
					    }) }}
					<div class="currency">
					    <span>Select Currency:</span>
					    {{ form_errors(form.currency) }}
					    {{ form_widget(form.currency) }}
					</div>
					    {{ form_rest(form) }}
				</div>

			    <div class="flat-footer">
			    	<input type="submit" value="Create Group" class="btn btn-success" style="border:none;"/>
			    </div>
			</form>
			
		</div>
	</div>
</div>
{% endblock %}