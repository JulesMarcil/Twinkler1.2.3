<div class="add-members">
	<div class="subheader">
		<span style="display: block; height: 30px; vertical-align: middle; padding-left: 10px;">
		<h3>Add a new member</h3>
		</span>
	</div>
	<div>
		<form action="{{ path('tk_group_add_member') }}" method="post" {{ form_enctype(form) }}>
		    {{ form_errors(form) }}

		    <div>
		    {{ form_errors(form.name) }}
		    {{ form_widget(form.name, 
	            { 'attr': { 'placeholder' : 'Enter his name', 'style' : 'height: 40px; width:150px'}}) 
	        }}
	        </div>

	        <div>
	        {{ form_errors(form.email) }}
		    {{ form_widget(form.email, 
	            { 'attr': { 'placeholder' : 'Email (optional)', 'style' : 'width:200px'}}) 
	        }}

		    {{ form_rest(form) }}
	    	<input type="submit" value="Add"  id="add-button" class="btn btn-success" style="vertical-align: top; width: 70px"/>
	    	</div>
		</form>
		<small><br>You do not have his email ?<br>Share this link for him to see the invitation:<br></small>
		<textarea rows="2">http://www.twinkler.co/invitation/{{app.user.currentMember.tgroup.id}}/{{app.user.currentMember.tgroup.invitationToken}}</textarea>
	</div>
</div>