{% set group = app.user.currentMember.tgroup %}
{% set currency = app.user.currentMember.tgroup.currency.symbol %}

<div class="row">

<div class="row" align="center">
	<div class="span4 offset1">
		<div class="group-info flat-container">
			<div class="group-header flat-header" style="height: 30px; margin: 5px; width: auto">	
				<span class="group-title">
					<h2> {{ group.name|upper }}</h2>
				</span>
			</div>
		</div>
		<div id="group-edit-list" class="group-info group-edit flat-container">
			<ul>
				<li>
					<a class="edit-group-a" href="{{ path('tk_group_add_members') }}">
						<div id="action-bar-first-child" style="width:100%; height:100%; padding-top: 10px">
							ADD A FRIEND <i class="icon-plus-sign" style="float:right; margin-right: 15px"></i> 
						</div>
					</a>
				</li>
				<li>
					<a class="edit-group-a accordion-toggle" data-toggle="collapse" href="#collapse-remove-member">						
						<div style="width:100%; height:100%; padding-top: 10px">
							<i class="icon-minus-sign" style="float:right; margin-right: 15px"></i>   
							REMOVE MEMBER
						</div>		
					</a>
				</li>
				<li>
					<a  class="edit-group-a" data-toggle="collapse" href="#collapse-edit-group">	
						<div style="width:100%; height:100%; padding-top: 10px">
							<i class="icon-signout" style="float:right; margin-right: 15px"></i>   
							EDIT GROUP
						</div>			
					</a>
				</li>
				<li>
					<a  class="edit-group-a" data-toggle="collapse" href="#collapse-close-group">	
						<div style="width:100%; height:100%; padding-top: 10px">
							<i class="icon-signout" style="float:right; margin-right: 15px"></i>   
							CLOSE GROUP
						</div>			
					</a>
				</li>
			</ul>
		</div>
		<div>
			<div id="collapse-remove-member" class="accordion-body collapse">
				<div class="accordion-inner">	
					<div class="well">
						{% include 'TkGroupBundle:GroupActions:removeMembers.html.twig' %}
					</div>
				</div>
			</div>
		</div>
		<div >
			<div id="collapse-edit-group" class="accordion-body collapse">
				<div class="accordion-inner">	
					<div class="well">
						{% render(controller('TkGroupBundle:Default:edit')) %}
					</div>
				</div>
			</div>
		</div>	
		<div >
			<div id="collapse-close-group" class="accordion-body collapse">
				<div class="accordion-inner">	
					<div class="well">
						<p>Are you sure you want to close the group <b>{{ app.user.currentMember.tgroup.name }}</b> ?</p>
						<small>You will not be able to access this group anymore</small>
						<p><a href="{{ path('tk_group_close', { 'id' : app.user.currentMember.tgroup.id}) }}" class="btn btn-danger" style="margin: 20px;">Yes</a><a href="" class="btn">No</a></p>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="span4">
		{% include "TkExpenseBundle:Payback:addPaybackModal.html.twig" %}
		<div id="settlement" class="flat-container">
			<div class="expense-header flat-header" style="text-align:left;">
				<div id="expense-title">
					<h2>PAYBACK</h2>
				</div>
				<a href="#addPaybackModal" role="button" data-toggle="modal">
					<div id="add-expense-btn">
						<i class="icon-plus-sign" style=""></i>ADD PAYBACK
					</div>
				</a>
			</div>
				{% if debts|length == 0 %}
				<p style="margin-top: 10px; color:rgb(67,113,191)">No debts at all, lucky you !</p>
				{% else %}

				<div class="payback-table">
					<table>
						{% for debt in debts %}
						<tr style="height: 30px;">
							<td style="text-align: left;">{{ debt[0] }}</td> 
							<td class="payback-text">gives </td>
							<td style="color:#99B335;">{{ debt[1] }} {{ currency }}</td>
							<td class="payback-text"> to </td>
							<td style="text-align: left;">{{ debt[2] }}</td>
						</tr>
						{% endfor %}

					</table>
				</div>
			{% endif %}
		</div>
	</div>
</div>