<div style="text-align: center">
	<div style="display: block">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true" style="position: absolute; top: 0; right: 5px;">Ã—</button>
	</div>
	<div>
		<div class="flat-header" style="border-radius: 0">
			<h3>Validate this Payback</h3>
		</div>
		<div>
			<form id="add-expense-form" action="{{ path('tk_payback_prefilled', {'id1' : id1, 'amount' : amount, 'id2' : id2 }) }}" method="post" {{ form_enctype(form) }}>
			    {{ form_errors(form) }}

			    <div>
					<span>Who paid?<br></span>
					{{ form_errors(form.owner) }}
					{{ form_widget(form.owner, 
				        { 'attr': { 'style' : 'width : 150px;'}}) 
				    }}
			    </div>

			    <div>
				    {{ form_errors(form.amount) }}
				    {{ form_widget(form.amount, 
				        { 'attr': { 'placeholder' : 'How much ?'}}) 
				    }}
			    </div>

			    <div>
					<span>To who?<br></span>
			    	{{ form_errors(form.users) }}
			    	{{ form_widget(form.users) }}
			    </div>

			    <div class="payback-date">
			    	<span>When was it paid?<br></span>
			    	{{ form_errors(form.date) }}
			    	{{ form_widget(form.date) }}
			    </div>

				{{ form_widget(form._token) }}

			    <div class="flat-footer" style="margin: 0px">
			        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
			    	<input type="submit" class="btn btn-success" value="Record Payback"/>
			    </div>
			</form>
			
		</div>
	</div>
</div>