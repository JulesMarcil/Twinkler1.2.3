<form id="add-expense-form" action="{{ path('tk_payback_new') }}" method="post" {{ form_enctype(form) }}>
    {{ form_errors(form) }}

    <div>
		<span>Who paid?</span>
		{{ form_errors(form.owner) }}
		{{ form_widget(form.owner, 
	        { 'attr': { 'style' : 'width : 150px;'}}) 
	    }}
    </div>

    <div>
	    {{ form_errors(form.amount) }}
	    {{ form_widget(form.amount, 
	        { 'attr': { 'placeholder' : 'How much ?'}}) 
	    }}
    </div>

    <div>
		<span>To who?</span>
    	{{ form_errors(form.users) }}
    	{{ form_widget(form.users) }}
    </div>

    <div>
    	<span>When was it paid?</span>
    	{{ form_errors(form.date) }}
    	{{ form_widget(form.date) }}
    </div>

	{{ form_widget(form._token) }}

    <div class="flat-footer">
    	<input type="submit" class="btn btn-success" value="Record Payback"/>
    	<button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    </div>
</form>