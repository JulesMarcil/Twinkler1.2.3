{% set group = app.user.currentMember.tgroup %}

<div class="row">
	<div class="span3 offset1">

		<div class="group-info flat-container">
			<div class="group-header flat-header" style="height: 30px; margin: 5px; width: auto">	
				<span style="display: block; height:30px; vertical-align: middle; padding-top: 2px; padding-left: 10px; padding-right: 10px">
					<h2> {{ group.name }} <i class="icon-group" style="float:right;margin-top:2px;"></i></h2>
				<span>
			</div>
		</div>
		<div id="group-edit-list" class="group-info group-edit flat-container">
			{% if group.lists|length == 0%}
			<p>Your group has no lists. Too bad :'(</p>
			{% else %}
			<ul>
				{% for list in group.lists %}
				<li>
					<a class="edit-group-a" href="#" data-id="{{list.id}}">
						<div id="action-bar-first-child" style="width:100%; height:100%; padding-top: 10px">
							{{ list.name|upper }}
						</div>
					</a>
				</li>
				{% endfor %}

			{% endif %}
			</ul>
		</div>
		<div id="list-menu">
			<div id="create-list-button">
				<a href="#" class="flat-btn flat-pk" style="height: 40px; width: 100%; margin-top: 10px; line-height: 40px;">Create a new List</a>
			</div>
		</div>
	</div>
	<div class="span7">
		<div id="todo-title" class="flat-container" style="width: 100%">
			<div class="flat-header">
				<h3>{{ app.session.get('list_name') }}</h3>
			</div>
			<div id="form-box">
			</div>
			<table id="list-box">
			</table>
		</div>
	</div>
</div>